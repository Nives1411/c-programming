#include <stdio.h>
int main(){
    int m,n;
    int i,j,k;
    printf("enter the size of the first array:");
    scanf("%d",&m);
    printf("enter the size of the second array:");
    scanf("%d",&n);
    int nums1[m+n];
    int nums2[n];
    printf("enter the elements of first array:\n");
    for(i=0;i<m;i++)
    {
        scanf("%d", &nums1[i]);
    }
    printf("enter the elements of second array:\n");
    for(i=0;i<n;i++)
    {
        scanf("%d", &nums2[i]);
    }
    i=m-1;
    j=n-1;
    k=m+n-1;
    while(i>=0 && j>=0)
    {
        if(nums1[i]>nums2[j])
        {
            nums1[k]=nums1[i];
            nums1[k--]=nums2[j--];
        }
        else
        {
            nums1[k--]=nums2[j--];
        }
        
    }
    while(j>=0)
    {
        nums1[k]=nums2[j];
        j--;
        k--;
    }
    printf("merged array:\n");
    for(i=0;i<m+n;i++)
    {
    printf("%d",nums1[i]);
    }
return 0;
}